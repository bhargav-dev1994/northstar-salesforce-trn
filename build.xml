<project name="Salesforce Deployment" default="deploy" basedir=".">

  <!-- Define the namespace for Salesforce Ant tasks -->
  <taskdef name="sf:deploy" 
           classname="com.salesforce.ant.DeployTask" 
           classpath="lib/ant-salesforce.jar"/>
  
  <!-- Define the default target -->
  <target name="deploy">
      <!-- Print a message to indicate deployment is starting -->
      <echo message="Deploying to Salesforce..."/>
      
      <!-- Deploy task -->
      <sf:deploy 
          username="${sf.username}" 
          password="${sf.password}" 
          serverurl="${sf.serverurl}" 
          deployRoot="path/to/deploy/root" 
          alias="${org.alias}">
          <!-- Additional configuration here -->
      </sf:deploy>
  </target>

</project>
