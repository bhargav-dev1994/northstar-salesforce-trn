<?xml version="1.0" encoding="UTF-8"?>
<project name="SalesforceDeployment" default="deploy" basedir="." xmlns:sf="antlib:com.salesforce">
  
  <property name="sf.username" value="${env.SF_USERNAME_DEV1}"/>
  <property name="sf.password" value="${env.SF_PASSWORD_DEV1}"/>
  <property name="sf.serverurl" value="${env.SF_SERVERURL_SANDBOX}"/>

  <taskdef resource="com/salesforce/antlib.xml" uri="antlib:com.salesforce">
    <classpath>
      <pathelement location="path/to/your/salesforce-ant.jar"/>
    </classpath>
  </taskdef>

  <target name="deploy">
    <sf:deploy username="${sf.username}" password="${sf.password}" serverurl="${sf.serverurl}" deployRoot="src"/>
  </target>
</project>
