<project name="SalesforceDeployment" basedir="." xmlns:sf="antlib:com.salesforce.ant">

  <property file="build.properties"/>

  <target name="deploy">
      <echo message="Deploying to Salesforce..."/>
      <sf:deploy 
          username="${sf.username}" 
          password="${sf.password}" 
          serverurl="${sf.serverurl}" 
          deployRoot="deploy" 
          ignoreWarnings="true"/>
  </target>
</project>
