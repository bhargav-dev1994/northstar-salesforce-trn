<project name="Deploy" default="deploy" basedir=".">
  <!-- Define the location of the Salesforce Ant library -->
  <taskdef name="deploy" 
           classname="com.salesforce.ant.DeployTask" 
           classpath="lib/ant-salesforce.jar"/>
  <taskdef name="retrieve" 
           classname="com.salesforce.ant.RetrieveTask" 
           classpath="lib/ant-salesforce.jar"/>

  <!-- Add more configurations as needed -->

  <target name="deploy">
    <sf:deploy
        username="${sf.username}"
        password="${sf.password}"
        serverurl="${sf.serverurl}"
        deployRoot="path/to/your/deployRoot"
        wait="true"
        pollWait="1000"
        testLevel="RunAllTestsInOrg"
        rollbackOnError="true"/>
</target>
</project>
