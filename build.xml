<project name="SalesforceDeployment" default="deploy" basedir=".">
  
  <property name="deployRoot" value="./src" />
  <property name="sf.username" value="${sf.username}" />
  <property name="sf.password" value="${sf.password}" />
  <property name="sf.serverurl" value="${sf.serverurl}" />

  <target name="deploy">
    <echo message="Deploying to Salesforce..." />
    <sf:deploy username="${sf.username}" password="${sf.password}" serverurl="${sf.serverurl}" deployRoot="${deployRoot}" />
  </target>

</project>
