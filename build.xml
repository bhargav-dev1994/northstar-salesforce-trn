<project name="SampleProject" default="deploy" xmlns:sf="antlib:com.salesforce.ant">
    
  <property name="deployRoot" location="deploy" />
  <property name="zipFile" location="package.zip" />
  
  <target name="deploy">
    <echo message="Deploying to Salesforce..." />
    <echo message="Username: ${sf.username}" />
    <echo message="Server URL: ${sf.serverurl}" />
    <echo message="Org Alias: ${org.alias}" />
    <sf:deploy 
        username="${sf.username}" 
        password="${sf.password}" 
        serverurl="${sf.serverurl}" 
        deployRoot="${deployRoot}" 
        zipFile="${zipFile}" 
        checkOnly="false" 
        runTests="false" />
</target>

</project>
