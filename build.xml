<project name="Salesforce Deployment" default="deploy" basedir=".">
  
  <!-- Define properties -->
  <property name="deploy.source" value="force-app/main/default"/>
  <property name="org.alias" value="${sf.username}"/> <!-- Use the dynamic value passed from the command line -->

  <!-- Target to deploy to Salesforce using sf -->
  <target name="deploy">
      <echo message="Deploying to Salesforce org alias: ${org.alias}..."/>
      <exec executable="sf" failonerror="true" osfamily="windows">
          <arg line="deploy metadata --source-dir ${deploy.source} --target-org ${org.alias}"/>
      </exec>
  </target>
</project>
