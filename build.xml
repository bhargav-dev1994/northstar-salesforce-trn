<project name="SalesforceDeployment" default="deploy" xmlns:sf="antlib:com.salesforce.ant">

  <!-- Load Salesforce Ant tasks -->
  <taskdef resource="com/salesforce/antlib.xml" uri="antlib:com.salesforce.ant">
      <classpath>
          <pathelement location="lib/ant-salesforce.jar"/>
      </classpath>
  </taskdef>

  <!-- Load properties from build.properties file -->
  <property file="build.properties"/>

  <!-- Deployment target -->
  <target name="deploy">
      <sf:deploy
          username="${sf.username}"
          password="${sf.password}"
          serverurl="${sf.serverurl}"
          deployRoot="src"
          testLevel="RunLocalTests"/>
  </target>

</project>
