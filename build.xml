<project name="SalesforceDeploy" default="deploy" xmlns:sf="antlib:com.salesforce.ant">

  <!-- Load the Salesforce Ant tasks -->
  <taskdef resource="com/salesforce/antlib.xml" uri="antlib:com.salesforce.ant">
      <classpath>
          <pathelement location="./lib/ant-salesforce.jar"/>
      </classpath>
  </taskdef>

  <target name="deploy">
      <echo message="Deploying to Salesforce..."/>
      <sf:deploy
          username="${sf.username}"
          password="${sf.password}"
          serverurl="${sf.serverurl}"
          deployRoot="src"
          testLevel="NoTestRun"/>
  </target>

</project>
